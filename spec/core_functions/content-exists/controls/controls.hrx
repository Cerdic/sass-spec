<===> input.scss
@mixin test-content-exists() {
  @if content-exists() {
    @content;
  }
  @else {
    content-exists: false;
  }
}

.should-be-true {
  @include test-content-exists() {
    content-exists: true;
  }
}

.should-be-false {
  @include test-content-exists();
}

<===> output.css
.should-be-true {
  content-exists: true;
}

.should-be-false {
  content-exists: false;
}
